<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg">
    <TextView
        android:id="@+id/header_cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer infomation"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="Arial"

        />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIRST NAME :  "
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/header_cus"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="Arial"

        />

    <EditText
        android:id="@+id/fill_first"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/first_name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:background="#000000"
        android:hint=" Enter your first name"
        android:textColorHint="#c0c0c0"
        />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST NAME :"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fill_first"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="Arial"

        />

    <EditText
        android:id="@+id/fill_last"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/last_name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:background="#000000"
        android:hint=" Enter your last name"
        android:textColorHint="#c0c0c0"/>

    <TextView
        android:id="@+id/deliver_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELIVER LOCATION :"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fill_last"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="Arial"

        />


    <EditText
        android:id="@+id/fill_locate"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:ems="100"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/deliver_location"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:background="#000000"
        android:hint=" Enter your location"
        android:textColorHint="#c0c0c0" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="#000000"
        android:text="Submit"
        android:onClick="submitCustomer"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/fill_locate"
        android:layout_alignStart="@+id/header"
        android:layout_alignEnd="@+id/header"/>

</RelativeLayout>